@model List<QualifyMeProject.ViewModels.CourseViewModel>

@{ 
    ViewBag.Title = "Courses";
}

<div class="row">
    <div class="col-sm-12">
        <h4>List of Courses</h4>
        <ul class="list-group list-group-flush">
            <li class="nav-item active">
                <a class="nav-link" href="/admin/courses/addcourse">Add Course</a>
            </li>
            @foreach (var item in Model)
            {
                <li class="list-group-item list-group-item-action">@item.CourseID. @item.CourseDepartment @item.CourseSpecification</li>
            }
        </ul>
    </div>
</div>

