@model List<QualifyMeProject.ViewModels.JobViewModel>

@{
    ViewBag.Title = "Jobs";

}


<div class="row">
<div class="col-sm-12">

    <h4>Job Listings</h4>
    <ul class="list-group list-group-flush">
            
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Job ID</th>
                    <th>Course ID</th>
                    <th>Company ID</th>
                    <th>Job Title</th>
                    <th>Job Description</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>@item.JobID</td>
                        <td>@item.CourseID</td>
                        <td>@item.CompanyID</td>
                        <td>@item.JobTitle</td>
                        <td>@item.JobDescription</td>
                        <td>@item.Date</td>
                        <td>@item.IsActive</td>

                    </tr>
                </tbody>
            }
        </table>
    </ul>

      
    @if (Session["CurrentCompanyName"] != null)
    {
        <a href="/company/jobs/addjob" class="btn btn-primary">Add Job</a>
    }
    </div>
</div>