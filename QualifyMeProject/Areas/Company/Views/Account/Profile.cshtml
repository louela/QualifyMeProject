@model QualifyMeProject.ViewModels.CompanyUserViewModel

@{
    ViewBag.Title = "Company Profile";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Company Profile</title>
</head>
<body>
    <div class="company-profile py-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent text-center">
                            <img class="profile_img" src="~/Images/avatar.png" width="200" height="200" alt="student dp">
                            <h3> @Session["CurrentCompanyName"]</h3>
                            <p>The best company here.</p>
                        </div>
                        <div class="card-body">
                            <p class="mb-0"><strong class="pr-1">Company ID:</strong>@Session["CurrentCompanyID"]</p>

                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent border-0">
                            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>Company Information</h3>
                        </div>
                        <div class="card-body pt-0">
                            <table class="table table-bordered">
                                <tr>
                                    <th width="30%">Company Name:</th>
                                    <td width="2%">:</td>
                                    <td>@Session["CurrentCompanyName"]</td>
                                </tr>
                                <tr>
                                    <th width="30%">Company Email:</th>
                                    <td width="2%">:</td>
                                    <td>@Session["CurrentCompanyEmail"]</td>
                                </tr>
                                <tr>
                                    <th width="30%">Mobile:</th>
                                    <td width="2%">:</td>
                                    <td>@Session["CurrentCompanyMobile"]</td>
                                </tr>
                                <tr>
                                    <th width="30%">Address:</th>
                                    <td width="2%">:</td>
                                    <td>@Session["CurrentCompanyAddress"]</td>
                                </tr>
                                <tr>
                                    <th width="30%">Description:</th>
                                    <td width="2%">:</td>
                                    <td>@Session["CurrentCompanyDescription"]</td>
                                </tr>

                            </table>
                        </div>
                    </div>
                    <div style="height: 26px"></div>
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent border-0">
                            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>Bio</h3>
                        </div>
                        <div class="card-body pt-0">
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
