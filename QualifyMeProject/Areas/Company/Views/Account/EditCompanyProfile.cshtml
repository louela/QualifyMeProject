@model QualifyMeProject.ViewModels.EditCompanyUserDetailsViewModel

@{
    ViewBag.Title = "Edit Company Profile";
}

<div class="row">
    <div class="col-sm-12">
        <h1>Edit Company Profile</h1>
        <form novalidate="novalidate" action="/company/account/editcompanyprofile" method="post" class="needs-validation">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-row">
                    <div class="form-group col-sm-12">
                        <label for="CompanyID">Company ID</label>
                        @Html.HiddenFor(temp => temp.CompanyID)
                        <span>@Model.CompanyID</span>
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="CompanyEmail">Email</label>
                    @Html.HiddenFor(temp => temp.CompanyEmail)
                    <span>@Model.CompanyEmail</span>
                </div>
                <div class="form-group col-sm-6">
                    <label for="CompanyName">Company Name</label>
                    <input type="text" class="form-control" id="CompanyName" placeholder="Enter Company Name" name="CompanyName" required="required" pattern="^[a-zA-Z ]*$" autofocus="autofocus" value="@Model.CompanyName" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter name [alphabets only].
                    </div>
                </div>

            </div>


            <div class="form-group col-sm-12">
                <label for="CompanyMobile">Mobile</label>
                <input type="text" class="form-control" id="CompanyMobile" placeholder="Mobile" name="CompanyMobile" required="required" pattern="^[789]\d{9}$" value="@Model.CompanyMobile" />
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Invalid mobile Number.
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="CompanyAddress">Company Address</label>
                    <input type="text" class="form-control" id="CompanyAddress" placeholder="Company Address" name="CompanyAddress" required="required" value="@Model.CompanyAddress" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Invalid mobile Number.
                    </div>
                </div>

                <div class="form-group col-sm-6">
                    <label for="CompanyDescription">Company Description</label>
                    <input type="text" class="form-control" id="CompanyDescription" placeholder="Company Description" name="CompanyDescription" required="required" value="@Model.CompanyDescription" />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Invalid mobile Number.
                    </div>
                </div>
            </div>

            @Html.ValidationSummary()
            <button type="submit" class="btn btn-primary">Update Profile</button>
        </form>
    </div>
</div>

<script>

   // $("a[href='/account/changeprofile']").attr("id", "active");

    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event)
    {
        if ($(".needs-validation")[0].checkValidity() == false)
        {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }
</script>


