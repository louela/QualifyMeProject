@model List<QualifyMeProject.ViewModels.CourseViewModel>

@{
    ViewBag.Title = "Courses";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h1>List of Courses!</h1>
        <div class="row">
            <div class="col-sm-12">
                <h4>List of Courses</h4>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Department</th>
                            <th>Specification</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>@item.CourseID</td>
                                <td>@item.CourseDepartment</td>
                                <td>@item.CourseSpecification</td>
                            </tr>
                        </tbody>
                    }
                </table>

            </div>
        </div>
    </div>

</body>
</html>

