@model QualifyMeProject.ViewModels.UserViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Profile</title>
</head>
<body>
    <div class="container mt-5">

        <div class="row d-flex justify-content-center">

            <div class="col-md-7">

                <div class="card p-3 py-4">

                    <div class="text-center">
                        <img src="~/Images/2x2.png" width="100" class="rounded-circle">
                    </div>

                    <div class="text-center mt-3">

                        <h5 class="mt-2 mb-0">@Session["CurrentUserName"]</h5>
                        <label for="StudentID">StudentID:</label>
                        <span>@Session["CurrentStudentID"]</span>

                        <div class="px-4 mt-1">
                            <p class="fonts">Full Stack Designer I enjoy creating user-centric, delightful and human experiences. </p>

                        </div>



                        <div class="buttons">

                            <button class="btn btn-outline-primary px-4">Message</button>
                            <button class="btn btn-primary px-4 ms-3" id="myEdit">Edit</button>
                        </div>


                    </div>




                </div>

            </div>

        </div>

    </div>
</body>
</html>
<script type="text/javascript">
    document.getElementById("myEdit").onclick = function () {
        location.href ="/account/editdetails";
    };
</script>